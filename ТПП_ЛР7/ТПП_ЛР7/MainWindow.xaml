<Window x:Class="ТПП_ЛР7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ТПП_ЛР7"
        mc:Ignorable="d"
        Title="Шаблон кастомной кнопки" Height="450" Width="800">
	<Window.Resources>
		<Style x:Key="CustomButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF0066CC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Padding" Value="20,10"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                RenderTransformOrigin="0.5,0.5">
							<Border.Effect>
								<DropShadowEffect ShadowDepth="3" BlurRadius="8" Opacity="0.3"/>
							</Border.Effect>
							<ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
						</Border>

						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#FF0052A3"/>
								<Setter TargetName="border" Property="RenderTransform">
									<Setter.Value>
										<ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
									</Setter.Value>
								</Setter>
								<Setter TargetName="border" Property="Effect">
									<Setter.Value>
										<DropShadowEffect ShadowDepth="4" BlurRadius="12" Opacity="0.4"/>
									</Setter.Value>
								</Setter>
							</Trigger>

							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#FF003D7A"/>
								<Setter TargetName="border" Property="RenderTransform">
									<Setter.Value>
										<ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
									</Setter.Value>
								</Setter>
								<Setter TargetName="border" Property="Effect">
									<Setter.Value>
										<DropShadowEffect ShadowDepth="2" BlurRadius="6" Opacity="0.2"/>
									</Setter.Value>
								</Setter>
							</Trigger>

							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Background" Value="#FFA0A0A0"/>
								<Setter Property="Foreground" Value="#FF707070"/>
								<Setter TargetName="border" Property="Effect">
									<Setter.Value>
										<DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.1"/>
									</Setter.Value>
								</Setter>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid Background="#FFF5F5F7">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
			<!-- Основная кнопка - насыщенный синий -->
			<Button Content="Основная кнопка"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#FF0066CC"
                    Margin="0,0,0,20"
                    Width="220"
                    Height="40"/>

			<!-- Вторая кнопка - яркий зеленый -->
			<Button Content="Вторастепенная кнопка"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#FF00B894"
                    Margin="0,0,0,20"
                    Width="220"
                    Height="40">
				<Button.Triggers>
					<EventTrigger RoutedEvent="MouseEnter">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FF00A085"
                                                Duration="0:0:0.15"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
					<EventTrigger RoutedEvent="MouseLeave">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FF00B894"
                                                Duration="0:0:0.3"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
				</Button.Triggers>
			</Button>

			<!-- Отключенная кнопка -->
			<Button Content="Отключенная кнопка"
                    Style="{StaticResource CustomButtonStyle}"
                    IsEnabled="False"
                    Margin="0,0,0,20"
                    Width="220"
                    Height="40"/>

			<!-- Анимированная кнопка - энергичный оранжевый -->
			<Button Content="Анимированная кнопка"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#FFFF6B35"
                    Margin="0,0,0,20"
                    Width="220"
                    Height="40">
				<Button.Triggers>
					<EventTrigger RoutedEvent="MouseEnter">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FFE55627"
                                                Duration="0:0:0.15"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1.08"
                                                 Duration="0:0:0.15"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1.08"
                                                 Duration="0:0:0.15"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
					<EventTrigger RoutedEvent="MouseLeave">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FFFF6B35"
                                                Duration="0:0:0.3"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1"
                                                 Duration="0:0:0.25"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1"
                                                 Duration="0:0:0.25"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
					<EventTrigger RoutedEvent="PreviewMouseDown">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FFCC552A"
                                                Duration="0:0:0.1"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="0.92"
                                                 Duration="0:0:0.1"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="0.92"
                                                 Duration="0:0:0.1"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
					<EventTrigger RoutedEvent="PreviewMouseUp">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FFE55627"
                                                Duration="0:0:0.1"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1.08"
                                                 Duration="0:0:0.1"/>
								<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1.08"
                                                 Duration="0:0:0.1"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
				</Button.Triggers>
				<Button.RenderTransform>
					<ScaleTransform ScaleX="1" ScaleY="1"/>
				</Button.RenderTransform>
			</Button>

			<!-- Дополнительная кнопка - фиолетовый акцент -->
			<Button Content="Акцентная кнопка"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#FF9B59B6"
                    Margin="0,0,0,20"
                    Width="220"
                    Height="40">
				<Button.Triggers>
					<EventTrigger RoutedEvent="MouseEnter">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FF8E44AD"
                                                Duration="0:0:0.2"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
					<EventTrigger RoutedEvent="MouseLeave">
						<BeginStoryboard>
							<Storyboard>
								<ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                To="#FF9B59B6"
                                                Duration="0:0:0.3"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
				</Button.Triggers>
			</Button>
		</StackPanel>
	</Grid>
</Window>